{% extends "layout/base.html.twig" %}

{% block body %}
    <h3>Shopping List Items</h3>

    {% for item in items %}
        <p>
            {% if item.checked %}
                <strike>
                    <span>{{ item.name }} - Qty {{ item.quantity|number_format(2) }}</span>
                </strike>
            {% else %}
                <span>{{ item.name }} - Qty {{ item.quantity|number_format(2) }}</span>
            {% endif %}

            <span>
                <a href="/items/{{ item.id }}/edit" role="button">Edit</a>
                <a href="/items/{{ item.id }}/delete" role="button" class="contrast">Delete</a>
            </span>
        </p>

        <hr/>
    {% endfor %}

    <p>
        <a role="button" href="/items/new" class="primary">
            + New Item
        </a>

        <a role="button" href="/db/seed" class="secondary">
            Seed the database
        </a>
    </p>
{% endblock %}
